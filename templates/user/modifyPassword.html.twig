{% extends 'base.html.twig' %}

{% block title %}Change your password{% endblock %}

{% block body %}
    <main>
        {# Affichage du formulaire de changement de mot de passe #}
        <div class="securityFormContainer {{ app.user and app.user.darkMode ? 'dark' }}">
            {{ form_start(form) }}
                <h1 class="securityFormTitle {{ app.user and app.user.darkMode ? 'dark' }}">Change your password</h1>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.password, 'Current Password') }}
                    {{ form_errors(form.password) }}
                    {{ form_widget(form.password) }}
                </div>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.plainPassword.first, 'New Password') }}
                    {{ form_errors(form.plainPassword.first) }}
                    {{ form_widget(form.plainPassword.first) }}
                    <p class="securityFormLinkEnd {{ app.user and app.user.darkMode ? 'dark' }}"><i>Password must contain Uppercase, Lowercase, Number and a special character (12 - 40 characters)</i></p>
                </div>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.plainPassword.second, 'Confirm New Password') }}
                    {{ form_errors(form.plainPassword.second) }}
                    {{ form_widget(form.plainPassword.second) }}
                </div>
                <button type="submit" class="securityFormSubmitButton large {{ app.user and app.user.darkMode ? 'dark' }}" title="Change Password">Change Password</button>
                <p class="securityFormLinkEnd {{ app.user and app.user.darkMode ? 'dark' }}"><i>
                    By changing your password you will be logged out. 
                    You will need to login again with that new password, so be sure to remember it !
                </i></p>
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}