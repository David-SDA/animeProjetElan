{% extends 'base.html.twig' %}

{% block title %}Change your description{% endblock %}

{% block body %}
    <main>
        {# Affichage du formulaire de changement de description #}
        <div class="securityFormContainer {{ app.user and app.user.darkMode ? 'dark' }}">
            {{ form_start(form) }}
                <h1 class="securityFormTitle {{ app.user and app.user.darkMode ? 'dark' }}">Change your description</h1>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.description, 'Description') }}
                    {{ form_widget(form.description) }}
                </div>
                <button type="submit" class="securityFormSubmitButton large {{ app.user and app.user.darkMode ? 'dark' }}" title="Change Description">Change Description</button>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}