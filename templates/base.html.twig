<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
            <link rel="stylesheet" href="{{ asset("css/home.css") }}" >
            <link rel="stylesheet" href="{{ asset("css/general.css") }}">
            <link rel="stylesheet" href="{{ asset("css/anime.css") }}">
            <link rel="stylesheet" href="{{ asset("css/character.css") }}">
            <link rel="stylesheet" href="{{ asset("css/security.css") }}">
            <link rel="stylesheet" href="{{ asset("css/profile.css") }}">
            <link rel="stylesheet" href="{{ asset("css/animeList.css") }}">
            <link rel="stylesheet" href="{{ asset("css/responsive.css") }}">
        {% endblock %}
        
        {% block javascripts %}
        {% endblock %}
    </head>
    <body>
        <div class="navBarContainer">
            <i class="fa-solid fa-bars responsiveNavBarOpen"></i>
            {% if is_granted('ROLE_ADMIN') %}
                <a href="#" class="navBarAdmin">ADMIN SPACE</a>
            {% endif %}
            <nav class="navBar">
                <ul class="navBarContent">
                    <li class="navBarElement"><a href="{{ path('app_home') }}" class="navBarElementLink">HOME</a></li>
                    <li class="navBarElementDropdown">
                        <button class="navBarElementDropdownButton">ANIME</button>
                        <ul class="navBarElementDropdownContent">
                            <li><a href="{{ path('top_anime') }}" class="navBarElementLink navBarElementDropdownLink">TOP</a></li>
                            <li><a href="{{ path('seasonal_anime') }}" class="navBarElementLink navBarElementDropdownLink">SEASONIAL</a></li>
                            <li><a href="{{ path('all_anime') }}" class="navBarElementLink navBarElementDropdownLink last">ALL</a></li>
                        </ul>
                    </li>
                    <li class="navBarElement"><a href="#" class="navBarElementLink">SEARCH</a></li>
                    <li class="navBarElement"><a href="#" class="navBarElementLink">TALKS</a></li>
                    {# <li class="navBarElement"><a href="#" class="navBarElementLink">MARKET</a></li>  #}
                </ul>    
            </nav>
            <div class="navBarProfile">
                {% if app.user %}
                <a href="{{ path('show_user', { id: app.user.id }) }}" class="navBarProfileContainer">
                    <p class="navBarProfilePseudo">{{ app.user.pseudo }}</p>
                    <img src="{{ app.user.imageProfil ? asset('uploads/' ~ app.user.imageProfil) : asset('uploads/baseUser.png') }}" alt="Your Profile Picture" class="navBarProfilePicture">
                </a>
                {% else %}
                <a href="{{ path('app_login') }}" class="navBarButton">LOG IN</a>
                <a href="{{ path('app_register') }}" class="navBarButton">REGISTER</a>
                {% endif %}
            </div>
            {% if app.user %}
                <div class="navBarUserMenu">
                    <div class="navBarUserMenuTop">
                        <img src="{{ app.user.imageProfil ? asset('uploads/' ~ app.user.imageProfil) : asset('uploads/baseUser.png') }}" alt="Your Profile Picture" class="navBarProfilePicture">
                        <p class="navBarProfilePseudo">{{ app.user.pseudo }}</p>
                        <i class="fa-solid fa-xmark navBarUserMenuClose"></i>
                    </div>
                    <ul>
                        <li class="navBarUserMenuLink"><a href="{{ path('show_user', { id: app.user.id }) }}"><i class="fa-regular fa-user"></i>Profile</a></li>
                        <li class="navBarUserMenuLink"><a href="#"><i class="fa-solid fa-table-list"></i>Anime List</a></li>
                        <li class="navBarUserMenuLink"><a href="#"><i class="fa-regular fa-calendar"></i>Calendar</a></li>
                        <li class="navBarUserMenuLink"><a href="#"><i class="fa-solid fa-user-gear"></i>Settings</a></li>
                        <li class="navBarUserMenuLink"><a href="#"><i class="fa-solid fa-right-from-bracket"></i>Logout</a></li>
                    </ul>
                </div>
            {% endif %}
        </div>
        {% block body %}
        {% endblock %}
        {% block javascript %}
            <script>
                /* On récupère l'élement qui ouvre la barre de navigation et la barre de navigation */
                const responsiveNavBarOpen = document.querySelector(".responsiveNavBarOpen");
                const navBar = document.querySelector(".navBar");
                const navBarContent = document.querySelector(".navBarContent");

                /* On ajoute un écouter du click sur l'élement qui ouvre la barre de navigation */
                responsiveNavBarOpen.addEventListener("click", () => {
                    /* Si on clique sur la barre de navigation, on ajoute différentes classes */
                    navBar.classList.toggle("navBarOpen");
                    navBarContent.classList.toggle("navBarOpen");
                    document.body.classList.toggle("navBarNotScroll");
                });
            </script>
        {% endblock %}
    </body>
</html>
