{% extends 'base.html.twig' %}

{% block title %}
    {# On change le titre de la page en fonction de l'existence de l'évènement#}
    {% if eventExist %}
        Edit event
    {% else %}
        Create a new event
    {% endif %}
{% endblock %}

{% block body %}
    <main>
        <div class="securityFormContainer {{ app.user and app.user.darkMode ? 'dark' }}">
            {{ form_start(form) }}
            {# On change le titre de la page en fonction de l'existence de l'évènement #}
            {% if eventExist %}
                <h1 class="securityFormTitle {{ app.user and app.user.darkMode ? 'dark' }}">Edit Event</h1>
            {% else %}
                <h1 class="securityFormTitle {{ app.user and app.user.darkMode ? 'dark' }}">Create a new Event</h1>
            {% endif %}
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.title, 'Event Name*') }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title) }}
                </div>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.recurrent, 'Is it a weekly event ?*') }}
                    {{ form_errors(form.recurrent) }}
                    {{ form_widget(form.recurrent) }}
                </div>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.startDate, 'Start Date* (if it is a weekly event, this date is the first occurence of it)') }}
                    {{ form_errors(form.startDate) }}
                    {{ form_widget(form.startDate) }}
                </div>
                <div class="securityFormRow {{ app.user and app.user.darkMode ? 'dark' }}">
                    {{ form_label(form.endDate, 'End Date* (if it is a weekly event, this date is the last occurence of it)') }}
                    {{ form_errors(form.endDate) }}
                    {{ form_widget(form.endDate) }}
                </div>
            {% if eventExist %}
                <button type="submit" class="securityFormSubmitButton large {{ app.user and app.user.darkMode ? 'dark' }}" title="Edit Event">Edit Event</button>
            {% else %}
                <button type="submit" class="securityFormSubmitButton large {{ app.user and app.user.darkMode ? 'dark' }}" title="Create a new Event">Create Event</button>
            {% endif %}
                {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}