{% extends 'base.html.twig' %}

{% block title %}Admin Space : Users{% endblock %}

{% block body %}
    <main>
        <h1 class="title">Admin Space : Users</h1>
        <section class="adminSection">
            <h2>Non banned Users</h2>
            <table class="adminTable full">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Register date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                {% for nonBannedUser in nonBannedUsers %}
                    <tr>
                        <td><a href="{{ path('show_user' , { id: nonBannedUser.id }) }}" class="adminLinkText">{{ nonBannedUser.pseudo }}</a></td>
                        <td>{{ nonBannedUser.email }}</td>
                        <td>{{ nonBannedUser.dateInscription|date('m/d/Y H:i:s') }}</td>
                        <td>
                            {% if 'ROLE_ADMIN' not in nonBannedUser.roles %}
                                <a href="#" title="Ban this user" class="settingsChangePseudo"><i class="fa-solid fa-user-xmark"></i>
                            {% endif %}
                        </td>
                    </tr>        
                {% endfor %}
                </tbody>
            </table>
        </section>
        <section class="adminSection">
            <h2>Banned Users</h2>
            <table class="adminTable full">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Register date</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                {% for bannedUser in bannedUsers %}
                    <tr>
                        <td><a href="{{ path('show_user' , { id: bannedUser.id }) }}" class="adminLinkText">{{ bannedUser.pseudo }}</a></td>
                        <td>{{ bannedUser.email }}</td>
                        <td>{{ bannedUser.dateInscription|date('m/d/Y H:i:s') }}</td>
                        <td><a href="#" title="Unban this user" class="settingsChangePseudo"><i class="fa-solid fa-user-plus"></i></a></td>
                    </tr>        
                {% endfor %}
                </tbody>
            </table>
        </section>
        <section class="adminSection">
            <h2>Unverified Users</h2>
            <table class="adminTable full">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Register date</th>
                    </tr>
                </thead>
                <tbody>
                {% for unverifiedUser in unverifiedUsers %}
                    <tr>
                        <td><a href="{{ path('show_user' , { id: unverifiedUser.id }) }}" class="adminLinkText">{{ unverifiedUser.pseudo }}</a></td>
                        <td>{{ unverifiedUser.email }}</td>
                        <td>{{ unverifiedUser.dateInscription|date('m/d/Y H:i:s') }}</td>
                        <td><a href="#" title="Send a email confirmation"><i class="fa-solid fa-envelope"></i></a></td>
                    </tr>        
                {% endfor %}
                </tbody>
            </table>
        </section>
        <section class="adminSection">
            <h2>Admins</h2>
            <table class="adminTable full">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Register date</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in nonBannedUsers %}
                    {% if 'ROLE_ADMIN' in user.roles %}
                        <tr>
                            <td><a href="{{ path('show_user' , { id: user.id }) }}" class="adminLinkText">{{ user.pseudo }}</a></td>
                            <td>{{ user.email }}</td>
                            <td>{{ user.dateInscription|date('m/d/Y H:i:s') }}</td>
                        </tr>       
                    {% endif %}
                {% endfor %}
                </tbody>
            </table>
        </section>
    </main>
{% endblock %}

