{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    {{ form_errors(form) }}
    <div class="securityFormContainer">
        {{ form_start(form) }}
        <h1 class="securityFormTitle">Contact Us</h1>
        <div class="securityFormRow">
            {{ form_label(form.email, 'Email*') }}
            {{ form_errors(form.email) }}
            {{ form_widget(form.email) }}
        </div>
        <div class="securityFormRow">
            {{ form_label(form.subject, 'Subject*') }}
            {{ form_errors(form.subject) }}
            {{ form_widget(form.subject) }}
        </div>
        <div class="securityFormRow">
            {{ form_label(form.message, 'Message*') }}
            {{ form_errors(form.message) }}
            {{ form_widget(form.message) }}
        </div>
        <button type="submit" class="securityFormSubmitButton" title="Send">SEND</button>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
